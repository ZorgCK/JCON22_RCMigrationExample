<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<?xdevuiml version="1.0"?>
<?template NONE?>
<?import com.vaadin.flow.component.button.Button?>
<?import com.vaadin.flow.component.orderedlayout.HorizontalLayout?>
<HorizontalLayout xmlns:x="http://xml.xdev-software.com/xdevuiml" x:name="GenColProduct">
    <x:constraints zpos="0" width="-1px" height="-1px" />
    <Button x:themeVariants="LUMO_PRIMARY" x:name="button2" text="Edit">
        <x:icon src="com.flowingcode.vaadin.addons.ironicons.ImageIcons#EDIT" />
        <x:constraints width="0px" height="0px" flex-grow="0.0" />
    </Button>
    <Button x:themeVariants="LUMO_PRIMARY LUMO_ERROR" x:name="button" text="Button">
        <x:icon src="com.vaadin.flow.component.icon.VaadinIcon#TRASH" />
        <x:constraints width="0px" height="0px" flex-grow="0.0" />
    </Button>
    <Button x:name="button3" text="Button">
        <x:constraints width="0px" height="0px" flex-grow="0.0" />
    </Button>
    <Button className="multiline-button" x:name="button4" text="Ich bin ein langer Text">
        <x:constraints width="100px" height="0px" flex-grow="0.0" />
        <x:event>click.onComponentEvent</x:event>
    </Button>
</HorizontalLayout>
